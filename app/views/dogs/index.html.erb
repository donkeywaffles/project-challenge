<!-- Link To Sort The Index Page By Number Of Likes In The Last Hour -->
<% if !@sorted %>
  <%= link_to "SORT BY LIKES IN LAST HOUR", dogs_path(sorted: true) %>
<% end %>

<%= render partial: 'thumbnail', collection: @dogs, as: :dog, locals: {sorted: @sorted} %>

<!-- Paginate Index (using will_paginate GEM) -->
<%= will_paginate @dogs, previous_label: 'Previous', next_label: 'Next' %>
