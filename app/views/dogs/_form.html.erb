<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <!-- Allow Multiple Images To Be Selected -->
  <%= f.input :images, as: :file, input_html: {multiple: true}%>

  <% if @dog.images.any? %>
    <%= image_tag @dog.images.first %>
  <% end %>

  <%= f.button :submit %>
<% end %>
